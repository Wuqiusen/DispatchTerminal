<resources>

    <style name="myProgressBarStyleLarge" >
        　　<item name="android:indeterminateDrawable">@drawable/pb_bg</item>
        　　<item name="android:minWidth">76dip</item>
        　　<item name="android:maxWidth">76dip</item>
        　　<item name="android:minHeight">76dip</item>
        　　<item name="android:maxHeight">76dip</item>
    </style>

    <style name="xxl_list_normal_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">38px</item>
    </style>
    <style name="xxl_list_bold_text" parent="xxl_list_normal_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">44px</item>
    </style>


    <style name="xl_list_normal_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">34px</item>
    </style>

    <style name="xl_list_bold_text" parent="xl_list_normal_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">38px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="l_list_normal_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28px</item>
    </style>

    <style name="l_list_bold_text" parent="l_list_normal_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--页面顶部 日期 线路编号 调度员 天气 字体风格-->
    <style name="page_top_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">34px</item>
        <item name="android:textColor">@color/font_bg_bold</item>
    </style>

    <!--AlderDialog主题-->
    <style name="alder_dialog"  parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/Base.DialogWindowTitle.AppCompat</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>


        <style name="main_tab_bottom">
            <item name="android:textSize">@dimen/font_small</item>
            <item name="android:textColor">@color/main_tab_font_select</item>
            <item name="android:ellipsize">marquee</item>
            <item name="android:gravity">center_horizontal</item>
            <item name="android:background">@drawable/rb_main_tab_background</item>
            <item name="android:paddingBottom">@dimen/margin_tiny</item>
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:button">@null</item>
            <item name="android:singleLine">true</item>
            <item name="android:layout_weight">1.0</item>
            <item name="android:layout_marginTop">2dp</item>
            <item name="android:paddingTop">4dp</item>
        </style>

        <style name="et_style1">
            <item name="android:background">@drawable/et_background</item>
            <item name="android:paddingLeft">@dimen/margin_fit</item>
            <item name="android:textSize">@dimen/font_medium</item>
            <item name="android:textColor">@color/font_black</item>
            <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        </style>

        <style name="btn_big_blue_normal_style">
            <item name="android:background">@drawable/btn_big_blue_style</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:paddingRight">@dimen/margin_tiny</item>
            <item name="android:paddingLeft">@dimen/margin_tiny</item>
            <item name="android:layout_marginRight">@dimen/btn_margin</item>
            <item name="android:layout_marginLeft">@dimen/btn_margin</item>
        </style>

        <style name="btn_big_green_normal_style">
            <item name="android:background">@drawable/btn_big_green_style</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/font_large</item>
            <item name="android:paddingRight">@dimen/margin_tiny</item>
            <item name="android:paddingLeft">@dimen/margin_tiny</item>
        </style>



        <style name="getcode_button_style">
            <item name="android:background">@drawable/btn_big_blue_style</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:paddingRight">@dimen/margin_tiny</item>
            <item name="android:paddingLeft">@dimen/margin_tiny</item>
        </style>


        <style name="red_button_style">
            <item name="android:background">@drawable/btn_red_style</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/font_xlarge</item>
            <item name="android:paddingRight">@dimen/margin_tiny</item>
            <item name="android:paddingLeft">@dimen/margin_tiny</item>
        </style>


        <style name="blue_button_style">
            <item name="android:background">@drawable/btn_blue_style</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/font_xlarge</item>
            <item name="android:paddingRight">@dimen/margin_tiny</item>
            <item name="android:paddingLeft">@dimen/margin_tiny</item>
        </style>

        <style name="green_button_style">
            <item name="android:background">@drawable/btn_green_style</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:textSize">@dimen/font_large</item>
            <item name="android:paddingRight">@dimen/margin_tiny</item>
            <item name="android:paddingLeft">@dimen/margin_tiny</item>
        </style>

    <!--登录界面_EditText-->
    <style name="edit_login_style">
        <item name="android:background">@drawable/edt_bg_style</item>
        <item name="android:text">@null</item>
        <item name="android:textColor">@color/font_bg_normal</item>
        <item name="android:textColorHint">@color/font_bg_gray</item>
        <item name="android:paddingLeft">@dimen/margin_top</item>
        <item name="android:paddingRight">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin</item>
        <item name="android:layout_marginRight">@dimen/btn_margin</item>
    </style>
    <!--行程详情界面_Button-->
    <style name="btn_journey_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/white</item>
    </style>
     <!--行程或调度界面_TextView-->
    <style name="tv_run_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@null</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/font_bg_normal</item>
    </style>
    <style name="tv_symbol_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/font_bg_normal</item>
    </style>
</resources>
